upstream django {
    server 127.0.0.1:3031; # взаимодействие с uwsgi через веб-порт 
}

# конфигурация веб-сервера
server {
    # порт, который будет слушать веб-сервер в ожидании запросов от пользователй
    listen      8000;
    # доменное имя
    server_name     127.0.0.1; # замените на собственный домен или IP адрес
    charset     utf-8;

    # максимальный размер загружаемых на сервер данных
    client_max_body_size 75M;  

    # обслуживание медиа файлов и статики
    location /media  {
        alias /home/faa/.virtualenvs/django_1_8_5/bin/firstapp/media;
    }

    location /static {
        alias /home/faa/.virtualenvs/django_1_8_5/bin/firstapp/static;
    }

    # Остальные запросы перенаправляются в Django приложение
    location / {
        uwsgi_pass  django;
        include     /home/faa/.virtualenvs/django_1_8_5/bin/firstapp/uwsgi_params;
    }
}
